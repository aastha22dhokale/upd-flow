    // 3️⃣ Run all 3 API calls in parallel
    CompletableFuture<Void> updateFuture = CompletableFuture.runAsync(() ->
            updateExternalIdentifier(uuid, updateRequest));

    CompletableFuture<Void> addressFuture = CompletableFuture.runAsync(() ->
            addressService.createPostalAddress(uuid, orgNumber));

    CompletableFuture<Void> hierarchyFuture = CompletableFuture.runAsync(() -> {
        List<Map<String, String>> configs = configReader.fetchByOrgNumber(orgNumber);
        Map<String, String> config = configs.isEmpty() ? Collections.emptyMap() : configs.get(0);
        String parentId = config.getOrDefault("parentId", "DEFAULT_PARENT");
        createOrganisationUnitHierarchy(uuid, parentId);
    });

    // 4️⃣ Wait for all to complete
    CompletableFuture.allOf(updateFuture, addressFuture, hierarchyFuture).join();

    log.info("✔ All parallel operations completed for OU uuid={}", uuid);
}
